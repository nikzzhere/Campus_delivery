        <div id="app">
            <div class="contentTab">
                <div class="listProduct">
                    <% products.forEach(product => { %>
                        <div class="item">
                            <a href="/detail/<%= product.id %>">
                                <img src="<%= product.image %>">
                            </a>
                            <h2><%=product.name%></h2>
                            <div class="price">â‚¹<%= product.price %></div>
                            <button 
                                class="addCart" 
                                data-id=<%= product.id %>>
                                    Add To Cart
                            </button>
                        </div>
                    <% }); %>
                </div>
            </div>   
        </div>


    <div class="cartTab">
        <h1>Shopping Cart</h1>
        <div class="listCart">
        </div>
        <div class="btn">
            <button class="close">CLOSE</button>
            <button class="checkout"><a href="/checkout">CHECK OUT</a></button>
        </div>
    </div>
    

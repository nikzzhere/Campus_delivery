<body class="">
    <div class="container">
        <header>
            <div class="title">
                <img src="https://upload.wikimedia.org/wikipedia/commons/7/73/Logo_IIT_Bhilai.png" width="100px" height="100px" alt="">
                <span class="logo-text">IIT Bhilai Campus Pharmacy </span>
            </div>
            <nav class="top-nav">
                <a href="/">Home</a>
                <a href="#">Categories</a>
                <a href="#">Contact</a>
                <!-- <a href="#">About</a> -->
            </nav>
            <div class="icon-container">
                <div class="dropdown">
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 0a10 10 0 1 0 10 10A10.011 10.011 0 0 0 10 0Zm0 5a3 3 0 1 1 0 6 3 3 0 0 1 0-6Zm0 13a8.949 8.949 0 0 1-4.951-1.488A3.987 3.987 0 0 1 9 13h2a3.987 3.987 0 0 1 3.951 3.512A8.949 8.949 0 0 1 10 18Z"/>
                    </svg>
                    <div class="dropdown-options">
                      <a href="/profile">Profile</a>
                      <a href="#">Delivery Status</a>
                      <a href="/prev_orders">Previous Orders</a>
                      <a href="/Med_book">Medical Book</a>
                      <a href="#">Doctor Consultation</a>
                    </div>
                  </div>
                <div class="icon-cart">
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 15a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm0 0h8m-8 0-1-4m9 4a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm-9-4h10l2-7H3m2 7L3 4m0 0-.792-3H1"/>
                    </svg>
                    <span>0</span>
                </div>
            </div>
        </header>        
        <div class="search-container">
            <input type="text" class="search-box" id="searchInput" placeholder=" Search...">
            <button class="search-button" id="searchButton">
                <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20" width="10" height="25">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                </svg>
            </button>
            <div class="search-results" id="searchResults"></div>
        </div>
        

    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    
<div class="container">
    <header>
        <div class="title">
            <img src="https://upload.wikimedia.org/wikipedia/commons/7/73/Logo_IIT_Bhilai.png" width="100px" height="100px" alt="">
            <span class="logo-text">IIT Bhilai Campus Pharmacy </span>
        </div>
        <nav class="top-nav">
            <a href="/">Home</a>
            <a href="#">Categories</a>
            <a href="#">Contact</a>
            <!-- <a href="#">About</a> -->
        </nav>
        <div class="icon-container">
            <div class="icon-profile">
                <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20" style="margin-right: 30px;">
                    <path d="M10 0a10 10 0 1 0 10 10A10.011 10.011 0 0 0 10 0Zm0 5a3 3 0 1 1 0 6 3 3 0 0 1 0-6Zm0 13a8.949 8.949 0 0 1-4.951-1.488A3.987 3.987 0 0 1 9 13h2a3.987 3.987 0 0 1 3.951 3.512A8.949 8.949 0 0 1 10 18Z"/>
                </svg>
            </div>
            <!-- <div class="icon-cart">
                <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 15a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm0 0h8m-8 0-1-4m9 4a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm-9-4h10l2-7H3m2 7L3 4m0 0-.792-3H1"/>
                </svg>
                <span>0</span>
            </div> -->
        </div>
    </header> 
    <div class="checkoutLayout">

        
        <div class="returnCart">
            <a href="/">All Orders</a>
            <!-- <button id="locate-checkout" style="background-color: #6a6fc9; border-radius: 20px; border: none; height: 52px;  width: 150px;
            font-size: medium; font-family: Poppins; font-weight: 600; color: #fff; margin-bottom: 20px;"><svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 20" width="16" height="20"  style = "margin-left: -20px;">
                <path d="M8 0a7.992 7.992 0 0 0-6.583 12.535 1 1 0 0 0 .12.183l.12.146c.112.145.227.285.326.4l5.245 6.374a1 1 0 0 0 1.545-.003l5.092-6.205c.206-.222.4-.455.578-.7l.127-.155a.934.934 0 0 0 .122-.192A8.001 8.001 0 0 0 8 0Zm0 11a3 3 0 1 1 0-6 3 3 0 0 1 0 6Z"/>
            </svg>LOCATE ME</button> -->
            <h1>Products</h1>
            <% total.forEach(element => { %>
                <div class="list">
                    <div class="item">
                        <div class="info">
                            <div class="name"><%= element.name %></div>
                            <div class="price">â‚¹<%= element._doc.price %>/1 product</div>
                        </div>
                        <div class="quantity"><%= element.quantity %></div>

                            <% if (element._doc.reimbursible === true){ %>
                                <div>Reimbursible</div>
                            <% } else { %>
                                <div>Non-reimbursible</div>
                            <% } %>
                    </div>
                </div>
                
            <% }); %>
        </div>
 
        <div class="right">
            <h1>Order Details</h1>

            <div class="form">

                <div class="group">
                    <label for="residence">Pharmacist</label>
                    <select name="residence" id="residence">
                        <option value="">Choose..</option>
                        <option value="hostels">Pharmacist 1</option>
                        <option value="faculty">Pharmacist 2</option>
                        <option value="staff">Pharmacist 3</option>
                        <option value="academic">Pharmacist 4</option>
                    </select>
                </div>
    
            
            </div>
            <div class="return">
                <div class="row">
                    <div>Total Quantity</div>
                    <div class="totalQuantity"><%= order.totalQuantity %></div>
                </div>
                <div class="row">
                    <div>Total Price</div>
                    <div class="totalPrice"><%= order.totalPrice %></div>
                </div>
                <div class="row">
                    <div>Reimbursable Amount</div>
                    <div class="totalPrice"><%= order.reimPrice %></div>
                </div>
                <div class="row">
                    <div>Final Amount</div>
                    <div class="totalPrice"><%= order.pay %></div>
                </div>
            </div>
            <form action="/paymentDone" method="post">
                <button class="buttonCheckout" style="font-size:medium" name="order" value="<%= orderId %>">Payment Done</button>
            </form>
            </div>
    </div>
</div>




</body>
</html>